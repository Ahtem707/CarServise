<body>
    <div class="container">
      <form id="order-form" method="POST" action="/zakaz">
        <h2>Оформление заказа</h2>
        <label for="fio">ФИО:</label>
        <input type="text" id="fio" name="fio" placeholder="Иванов Иван Иванович" readonly value="<%= fio %>" />
    
        <label for="car">Автомобиль:</label>
        <select id="car" name="carId" required>
            <% cars.forEach(car => { %>
                <option value="<%= car.car_id %>"><%= car.mark %> <%= car.model %></option>
            <% }); %>
        </select>
    
        <label for="address">Адрес:</label>
        <input type="text" id="address" name="address" placeholder="Введите адрес" required />
    
        <label for="services">Услуги:</label>
        <div class="service-options">
            <label><input type="checkbox" name="services" value="1" /> Заправка бензином 95</label>
            <label><input type="checkbox" name="services" value="2" /> Заправка бензином 92</label>
            <label><input type="checkbox" name="services" value="3" /> Заправка бензином 100</label>
            <label><input type="checkbox" name="services" value="4" /> Заправка бензином ДТ</label>
            <label><input type="checkbox" name="services" value="5" /> Прикуривание</label>
            <label><input type="checkbox" name="services" value="6" />Зарядка аккумулятора</label>
            <label><input type="checkbox" name="services" value="7" /> Отогрев авто</label>
            <label><input type="checkbox" name="services" value="8" /> Ремонт замка зажигания</label>
            <label><input type="checkbox" name="services" value="9" /> Клининг</label>
            <label><input type="checkbox" name="services" value="10" /> Замена колеса</label>
            <label><input type="checkbox" name="services" value="11" /> Доставка топлива в дороге</label>
        </div>
    
        <label for="additional">Дополнительные требования:</label>
        <textarea id="additional" name="additionalRequirements"></textarea>
    
        <button type="submit">Оформить заказ</button>
    </form>
