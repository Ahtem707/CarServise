<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/admin.css" />
    <title>Регистрация сотрудника</title>
  </head>
  <body>
    <script>
      // Функция для проверки пароля
      function checkPassword() {
        const password = prompt("Введите пароль:");
        if (password === "xbox1337") {
          document.getElementById("auth-container").style.display = "block"; // Показываем содержимое
        } else {
          alert("Неверный пароль!");
          window.location.href = "/"; // Перенаправление на главную страницу
        }
      }

      // Проверка пароля при загрузке страницы
      window.onload = function() {
        checkPassword();
      };
    </script>
    <div class="auth-container">
      <h1>Регистрация сотрудника</h1>
      <form action="/admin/register" method="POST" class="auth-form">
        <div class="form-group">
          <label for="first_name">Имя:</label>
          <input type="text" id="first_name" name="first_name" required />
        </div>
        <div class="form-group">
          <label for="last_name">Фамилия:</label>
          <input type="text" id="last_name" name="last_name" required />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />
        </div>
        <div class="form-group">
          <label for="phone">Телефон:</label>
          <input type="tel" id="phone" name="phone" required />
        </div>
        <div class="form-group">
          <label for="password">Пароль:</label>
          <input type="password" id="password" name="password" required />
        </div>
        <div class="form-group">
          <label for="role">Роль:</label>
          <select id="role" name="role" required>
            <option value="admin">Администратор</option>
            <option value="manager">Менеджер</option>
            <option value="mechanic">Механик</option>
          </select>
        </div>
        <button type="submit" class="auth-button">Зарегистрироваться</button>
      </form>
      <p>Уже есть аккаунт? <a href="/admin/login">Войти</a></p>
      <a href="/" class="back-link">На главную</a>
    </div>
  </body>
</html>
